<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreenActivity"
    android:background="@color/bg_primary">

    <!-- CMD style content -->
    <LinearLayout
        android:id="@+id/cmd_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txt_first_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="" />

        <TextView
            android:id="@+id/txt_second_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="" />

        <TextView
            android:id="@+id/txt_third_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="" />

        <TextView
            android:id="@+id/txt_fourth_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="" />

        <TextView
            android:id="@+id/txt_fifth_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="" />

        <Button
            android:id="@+id/btn_build_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="build"/>

        <Button
            android:id="@+id/btn_skip_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skip rebuilding"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

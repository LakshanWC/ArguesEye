<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/bg_primary">

<!--contain logo and title-->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/bg_card"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/baseline_menu_24"
            android:backgroundTint="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="Argues Eye"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30dp"/>

    </LinearLayout>

<!--contain other things-->
    <LinearLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:background="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        android:orientation="vertical">

<!--contain search bar-->
        <!-- Search bar fixed using LinearLayout instead of RelativeLayout -->
        <LinearLayout
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/bg_card"
            android:padding="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="URL: "
                android:layout_marginEnd="4dp"/>

            <EditText
                android:id="@+id/editTxt_url"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Paste your link here"
                android:inputType="textUri"
                android:padding="8dp"/>

            <Button
                android:id="@+id/btn_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="verifyButtonClick"
                android:text="Verify"
                android:layout_marginStart="8dp"/>
        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/bg_card">

            <!-- Inside your ScrollView's LinearLayout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 1. Overall Risk Badge (big & colorful) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tv_risk_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SAFE"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/safe_green" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Domain Prefix"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tv_domain_prefix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="www."
                    android:textColor="@color/text_primary"
                    android:paddingBottom="12dp"/>


                <!-- 2. Domain & Final URL -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Domain"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"/>

                <TextView
                    android:id="@+id/tv_domain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="example.com"
                    android:textColor="@color/text_primary"
                    android:paddingBottom="12dp"/>

                <!-- 3. SSL / HTTPS -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SSL Certificate"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"/>

                <TextView
                    android:id="@+id/tv_ssl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Valid (Let's Encrypt)"
                    android:textColor="#00FF00"/>

                <!-- 4. IP & Hosting Location -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IP Address"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tv_ip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="104.21.53.123"
                    android:textColor="@color/text_primary"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hosting Country"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tv_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="United States"
                    android:textColor="@color/text_primary"/>

                <!-- 5. Reputation Scores -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reputation"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tv_reputation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Google Safe Browsing: Clean\nVirusTotal: 0/91 engines flagged"
                    android:textColor="@color/text_primary"/>

                <!-- 6. Category / Known For -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="E-commerce / Shopping"
                    android:textColor="@color/text_primary"/>

                <!-- 7. First Seen / Age -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Domain Age"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Created: 2015-03-22 (10 years old)"
                    android:textColor="#00FF00"/>

                <!-- 8. Phishing / Malware History -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Threat History"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tv_threat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No known phishing or malware incidents"
                    android:textColor="#00FF00"/>

                <!-- 9. Optional: Mini screenshot preview -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Preview"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="16dp"/>

                <ImageView
                    android:id="@+id/img_preview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:background="#222222"
                    android:src="@drawable/ic_launcher_background" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

<!--contain action related buttons-->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_card"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_block"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Block Url"/>

            <Button
                android:id="@+id/btn_continue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="Continue"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_open_sandbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Open in Sandbox Environment"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/bg_primary">

    <!-- Header with logo and title -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/bg_card"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/nav_bar_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="10dp"
            android:layout_gravity="center_horizontal">

            <ImageButton
                android:id="@+id/btn_home"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="10dp"
                android:src="@drawable/shield_24px"
                android:tint="@color/nice_blue"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/btn_more"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="10dp"
                android:src="@drawable/more_horiz_24px"
                android:onClick="goToMenu"
                android:tint="@color/white"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="Argues Eye"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30dp"/>
    </LinearLayout>

    <!-- Body -->
    <LinearLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:background="@color/black"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <!-- Search bar -->
        <LinearLayout
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/bg_card"
            android:padding="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="URL: "
                android:layout_marginEnd="4dp"/>

            <EditText
                android:id="@+id/editTxt_url"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Paste your link here"
                android:inputType="textUri"
                android:padding="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/nice_blue"
                android:textColor="@color/white"
                android:text="Verify"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Scrollable content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/bg_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Risk label -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tv_risk_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UNKNOWN"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_domain_details_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Domain Details"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/text_secondary"/>

<!--keep all domaind details-->
                <LinearLayout
                    android:id="@+id/domain_details_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <!-- Domain info -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Subdomain"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="12dp"/>
                <TextView
                    android:id="@+id/tv_subdomain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_primary"
                    android:paddingBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Domain"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"/>
                <TextView
                    android:id="@+id/tv_domain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_primary"
                    android:paddingBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Top-Level Domain"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"/>
                <TextView
                    android:id="@+id/tv_tld"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_primary"
                    android:paddingBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Scheme-(http or https)"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"/>
                <TextView
                    android:id="@+id/tv_scheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_primary"
                    android:paddingBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Path"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"/>
                <TextView
                    android:id="@+id/tv_path"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_primary"
                    android:paddingBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Query Parameters"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"/>
                <TextView
                    android:id="@+id/tv_query"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_primary"
                    android:paddingBottom="12dp"/>

                </LinearLayout>

                <!-- SSL Certificate Info -->
                <TextView
                    android:id="@+id/tv_ssl_certificate_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SSL Certificate Details"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="16dp"/>
                <TextView
                    android:id="@+id/tv_cert_avilability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/ssl_cert_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:background="@drawable/nav_button_box"
                    android:padding="16dp"
                    android:layout_margin="12dp"
                    android:elevation="4dp">

                    <!-- DANGER/WARNING BANNER (shown only if unsafe) -->
                    <LinearLayout
                        android:id="@+id/cert_warning_banner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#33FF0000"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_cert_security_summary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CERTIFICATE PROBLEM"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#D00000"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- GREEN "SAFE" BANNER (optional) -->
                    <LinearLayout
                        android:id="@+id/cert_safe_banner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#3300AA00"
                        android:padding="10dp"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Valid certificate for this domain"
                            android:textColor="#006400"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- Subject -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Subject"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary"/>
                    <TextView
                        android:id="@+id/tv_cert_subject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textColor="@color/text_primary"
                        android:paddingBottom="12dp"/>

                    <!-- Issuer -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Issuer"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary"/>
                    <TextView
                        android:id="@+id/tv_cert_issuer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textColor="@color/text_primary"
                        android:paddingBottom="12dp"/>

                    <!-- Validity -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Valid From"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary"/>
                    <TextView
                        android:id="@+id/tv_cert_valid_from"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textColor="@color/text_primary"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Valid Until"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary"/>
                    <TextView
                        android:id="@+id/tv_cert_valid_until"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textColor="@color/text_primary"
                        android:paddingBottom="12dp"/>

                    <!-- SHA-256 Fingerprint (copyable) -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SHA-256 Fingerprint"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary"/>
                    <TextView
                        android:id="@+id/tv_cert_fingerprint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textColor="@color/text_primary"
                        android:fontFamily="monospace"
                        android:textSize="13sp"
                        android:background="#11FFFFFF"
                        android:padding="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:textIsSelectable="true"
                        android:paddingBottom="12dp"/>

                    <!-- Subject Alternative Names -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Valid For (SANs)"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary"/>
                    <TextView
                        android:id="@+id/tv_cert_sans"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:textColor="@color/text_primary"
                        android:paddingStart="8dp"
                        android:paddingBottom="8dp"/>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Footer buttons -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_card"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_block"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/btn_block"
                android:textColor="@color/white"
                android:text="Block Url"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_continue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/btn_continue_anyway"
                android:text="Continue Any Way"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_open_sandbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/btn_sandbox"
            android:text="Open in Sandbox Environment"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
